    <script>
      var ctx = document.getElementById("ageChart").getContext("2d");
      var ageChart = new Chart(ctx, {
        type: "doughnut",
        data: {
          labels: [
            "Infant (0-1)",
            "Toddler (2-4)",
            "Child (5-12)",
            "Teen (13-19)",
            "Adult (20-39)",
            "Mid-Adult (40-59)",
            "Senior (60+)",
          ],
          datasets: [
            {
              label: "No. of People",
              data: [
                `<%= ageGroup.infant %>`,
                `<%= ageGroup.toddler %>`,
                `<%= ageGroup.child %>`,
                `<%= ageGroup.teen %>`,
                `<%= ageGroup.adult %>`,
                `<%= ageGroup.middleAdult %>`,
                `<%= ageGroup.seniorAdult %>`,
              ],
              backgroundColor: [
                "rgba(255, 99, 132, 0.5)",
                "rgba(54, 162, 235, 0.5)",
                "rgba(255, 255, 0, 0.5)",
                "rgba(75, 192, 192, 0.5)",
                "rgba(153, 102, 255, 0.5)",
                "rgba(255, 159, 64, 0.5)",
                "rgba(0, 128, 128, 0.5)",
              ],
            },
          ],
        },

        options: {
          plugins: {
            title: {
              display: true,
              text: "Age Group Statistics",
              font: {
                size: 18, // Set the font size to 18px
              },
            },
          },
          aspectRatio: 2.5, // set aspect ratio to 2:1
          scales: {
            yAxes: [
              {
                ticks: {
                  beginAtZero: true,
                },
              },
            ],
          },
        },
      });
    </script>
